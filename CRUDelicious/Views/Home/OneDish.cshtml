@model Dishes
@using CRUDelicious.Models
@{
    ViewData["Title"] = "Home Page";
}

  <div class="card shadow rounded mx-auto w-75 mb-3">
    <h4 class="card-title text-center bg-dark text-light py-2 rounded-top">
      @Model.Name
    </h4>
    <div class="card-body">
      <p class="card-text">@Model.Discription</p>
      <small class="text-muted">Submitted on: @Model.CreatedAt</small>
      <a href="dishes/@Model.ChefId/edit" class="btn btn-success">Edit</a>
      <a href="/delete/@Model.ChefId" class="btn btn-danger">Delete</a>
    </div>
  </div>
